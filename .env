# Postgres (used by docker-compose.yml)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=bereke_group_dev
POSTGRES_PORT=5432

# Prisma
# Format: postgresql://USER:PASSWORD@HOST:PORT/DB?schema=public
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bereke_group_dev?schema=public

# Auth
# Used to sign JWT access tokens (HS256). Set a long random string in real environments.
JWT_SECRET=CHANGE_ME

# pgAdmin (optional)
PGADMIN_PORT=5050
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin
